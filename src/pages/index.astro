---
import Layout from '~/layouts/Layout.astro';
import { T } from '~/locale'
---

<Layout withoutHome={true}>
    <main class="main">
        <div class="flex flex-col items-center gap-3 text-center">
            <img transition:name="logo" class="pointer-events-none lg:w-1/3" src="/assets/logo.svg" alt="">
            <p class="text-2xl font-gradient font-bold lg:text-3xl">
                {T.start.frontendDeveloper}
            </p>
            <p class="text-3xl font-medium mt-10 px-10">
                {T.start.description}
            </p>
        </div>    
    </main>
</Layout>