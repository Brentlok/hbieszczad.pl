---
import type { LinkType } from 'lib/types'
import { Layout, Icon, Link } from 'lib/components'

const links = [
    {
        url: 'https://github.com/Brentlok',
        icon: 'github',
        text: 'Brentlok'
    },
    {
        url: 'https://www.linkedin.com/in/hubert-bieszczad-a2a24823a/',
        icon: 'linkedin',
        text: 'Hubert Bieszczad'
    },
    {
        url: 'https://x.com/brentlok_',
        icon: 'x',
        text: '@brentlok_'
    }
] satisfies Array<LinkType>

---

<Layout>
    <main class="max-xs:mx-4 bg-slate-50 shadow-xl p-10 rounded-2xl flex flex-col md:flex-row md:gap-20">
        <div class="flex flex-col items-center">
            <Icon image="logo" class='w-60 xs:w-80' />
            <div class="flex flex-col items-center gap-5 -translate-y-8">
                <h1 class="font-gradient text-2xl xs:text-4xl font-medium">
                    Frontend Developer
                </h1>
                <p class="font-gradient font-medium tracking-wider text-lg xs:text-2xl text-center leading-[1.1em]">
                    Hi, I'm Hubert and I&nbsp;love&nbsp;web&nbsp;technology
                </p>    
            </div>
        </div>
        <nav class="flex md:flex-col justify-around"> 
            {links.map(link => (
                <Link {...link} />
            ))}
        </nav>
    </main>
</Layout>
