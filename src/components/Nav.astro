---
const items = ['Contact', 'Projects', 'Github'] as const;

const getLink = (item: typeof items[number]) => {
    if(item === 'Github') {
        return 'https://github.com/Brentlok/';
    }

    return `/${item.toLocaleLowerCase()}`;
}
---

<nav class="absolute top-5 right-5 flex flex-col gap-4 items-end">
    {
        items.map((item) => (
            <div class="font-gradient text-2xl opacity-70 hover:opacity-100 cursor-pointer transition-opacity">
                <a href={getLink(item)}>{item}</a>    
            </div>
        ))
    }
</nav>